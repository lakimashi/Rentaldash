# ==========================================
# RENTAL DASHBOARD BACKEND CONFIGURATION
# ==========================================
# Copy this file to .env and customize for your business

# ------------------
# Server Configuration
# ------------------
NODE_ENV=development
PORT=3001

# ------------------
# Database Configuration
# ------------------
# SQLite database file path (relative to backend directory or absolute)
SQLITE_PATH=./data/rental.db

# ------------------
# Security & Authentication
# ------------------
# JWT secret - generate a strong random key in production!
# Use: openssl rand -hex 32
JWT_SECRET=change-me-in-production-use-openssl-rand-hex-32
# JWT token expiration time (e.g., 7d, 24h, 60m)
JWT_EXPIRES_IN=7d
# Cookie max age in milliseconds (default: 7 days)
COOKIE_MAX_AGE=604800000
# Cookie sameSite setting (lax, strict, none)
COOKIE_SAME_SITE=lax

# ------------------
# Admin Account (Seed)
# ------------------
# Default admin credentials (used during database seeding)
SEED_ADMIN_EMAIL=admin@demo.com
SEED_ADMIN_PASSWORD=DemoAdmin123!

# ------------------
# Business Settings
# ------------------
# Default business/agency name
BUSINESS_NAME=Rental Agency
# Default currency code (USD, EUR, GBP, etc.)
DEFAULT_CURRENCY=USD
# Default VAT/tax percentage (0-100)
DEFAULT_VAT_PERCENT=0
# Default timezone (IANA format: America/New_York, Europe/London, etc.)
DEFAULT_TIMEZONE=UTC

# ------------------
# File Uploads
# ------------------
# Upload directory path (relative to backend directory or absolute)
UPLOAD_DIR=./uploads

# ------------------
# Rate Limiting
# ------------------
# Rate limit window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ------------------
# CORS Configuration
# ------------------
# Frontend URL for CORS (set to production URL in production)
FRONTEND_URL=http://localhost:5173

# ------------------
# Demo Data
# ------------------
# Seed demo data on first run (true/false)
SEED_DEMO=true

# ------------------
# Audit & Webhooks
# ------------------
# Optional webhook URL for audit logs
# AUDIT_WEBHOOK_URL=https://your-logging-service.com/webhook

# ------------------
# AI Chatbot Integration
# ------------------
# Enable AI chatbot integration (true/false)
CHATBOT_ENABLED=false
# Chatbot API base URL
CHATBOT_API_URL=
# Chatbot API key/secret
CHATBOT_API_KEY=

# ------------------
# Validation Constraints
# ------------------
# Car year range validation
CAR_YEAR_MIN=1900
CAR_YEAR_MAX=2100
# Customer name length validation
CUSTOMER_NAME_MIN_LENGTH=2
CUSTOMER_NAME_MAX_LENGTH=100
